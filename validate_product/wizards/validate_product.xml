<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="validate_product_form" model="ir.ui.view">
        <field name="name">validate.product.form</field>
        <field name="model">validate.product</field>
        <field name="arch" type="xml">
            <form>
                <separator colspan="4" string="Validate products"/>
                <span>Confirm to validate the selected products.</span>
                <footer>
                    <button name="validate_products" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_validate_product" model="ir.actions.act_window">
        <field name="name">Validate products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">validate.product</field>
        <field name="src_model">product.template</field>
        <field name="view_id" ref="validate_product_form"/>
        <field name="target">new</field>
        <field name="multi">True</field>
        <field name="groups_id" eval="[(4, ref('validate_product.group_validate_products'))]"/>
    </record>

    <record id="action_value_validate_product" model="ir.values">
        <field name="model_id" ref="product.model_product_template"/>
        <field name="name">validate.product.value.action</field>
        <field name="model">product.template</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,' + str(ref('action_validate_product'))"/>
        <field name="key">action</field>
    </record>
</odoo>
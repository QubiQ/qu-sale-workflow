<openerp>
    <data>
        <!--WIZARD FORM -->
        <record id="warning_wizard_view" model="ir.ui.view">
            <field name="name">warning.wizard.view</field>
            <field name="model">warning.wizard</field>
            <field name="arch" type="xml">
            	<form string="Warning">
                    <img src='/web/static/src/img/warning.png'>
                        <strong><field name="title" style="float: left; display: inline; font-size: 150%"/></strong>
                    </img>
                    <div style="text-align: center;">
                       <field name="message"/>
                    </div>
            		<footer>
                        <button name="confirm" string="Continuar" type="object" class="oe_highlight" groups="base.group_user" context="{'is_warned': True}"/>
		            	<button string="Cancel" class="btn-default" special="cancel"/>
                	</footer>
            	</form>
            </field>
        </record>
    </data>
</openerp>
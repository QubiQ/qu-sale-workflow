<odoo>
    <record id="partner_division_form_view" model="ir.ui.view">
        <field name="name">partner.division.form.view</field>
        <field name="model">partner.division</field>
        <field name="arch" type="xml">
            <form string="Partner Divisions">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sales_channel_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_division_tree_view" model="ir.ui.view">
        <field name="name">partner.division.tree.view</field>
        <field name="model">partner.division</field>
        <field name="arch" type="xml">
            <tree string="Partner Divisions">
                <field name="name"/>
                <field name="sales_channel_ids"/>
            </tree>
        </field>
    </record>

    <record id="partner_division_action" model="ir.actions.act_window">
        <field name="name">Partner Divisions</field>
        <field name="res_model">partner.division</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Select to create new Partner Division
            </p>
        </field>
    </record>

    <menuitem id="partner_division_menu" action="partner_division_action" name="Partner Divisions" parent="sale.menu_sale_config"/>
</odoo>